<%- include('shared/header.ejs') %>


    <div class="container text-center my-5">
        <div class="user my-3">
            <i class="fas fa-user-secret user-icon"></i>
            <h4 class="login">Login</h4>
            <% if (confirm.length!=0) { %>
                <div class="alert alert-danger text-center my-3">
                    please confirm your email first
                </div>
            <% } %>
        </div>
        <div class="card p-5 w-50 m-auto">
            <form method="POST" action="/handleLogin">
                <input value="<%= exist.length==0?'':exist[0].email%>" class="form-control" placeholder="Enter your email" type="text" name="email">
                <% if (exist!=0) { %>
                    <div class="alert alert-danger">
                        this email does not exist
                    </div>
                <% } %>
                <input value="<%= wrongPass.length==0?'':wrongPass[0].password%>" class="form-control my-4 " placeholder="Enter your Password" type="password" name="password">
                <% if (wrongPass!=0) { %>
                    <div class="alert alert-danger">
                        this password is wrong
                    </div>
                <% } %>
                <button class="btn btn-default-outline my-4 w-100 rounded">Login</button>
                
                <a class="btn btn-default-outline" href="/register">Register</a>
            </form>
        </div>
    </div>

<%- include('shared/footer.ejs') %>
